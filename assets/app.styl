$font-size-root ?= 18px;

@require '~vuetify/src/stylus/settings/_colors';

$theme ?= {
  primary: $red.darken-2,
  accent: $red.accent-2,
  secondary: $red.darken-2,
  info: $red.darken-2,
  warning: $red.darken-2,
  error: $red.darken-2,
  success: $red.darken-2
};

// Import Vuetify styling
@require '~vuetify/src/stylus/main';
